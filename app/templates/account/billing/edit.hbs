<div class='plans-container'>
  {{#each plans as |plan|}}
    {{plans-item plan=plan}}
  {{/each}}
</div>

<h2>Contact details</h2>

<p>All fields are required unless marked as optional.</p>

<div class='form-elem'>
  <label for='subscription-first-name' class='form-label'>First name</label>
  {{input id='subscription-first-name' name='firstName' value=firstName}}
</div>

<div class='form-elem'>
  <label for='subscription-last-name' class='form-label'>Last name</label>
  {{input id='subscription-last-name' name='lastName' value=lastName}}
</div>

<div class='form-elem'>
  <label for='subscription-company' class='form-label optional'>Company name</label>
  {{input id='subscription-company' name='company' value=company}}
</div>

<div class='form-elem'>
  <label for='subscription-email' class='form-label'>Billing email address</label>
  {{input id='subscription-email' name='email' value=email}}
</div>

<h2>Billing address</h2>

<p>All fields are required unless marked as optional.</p>

<div class='form-elem'>
  <label for='subscription-address' class='form-label'>Street address</label>
  {{input id='subscription-address' name='address' value=address}}
</div>

<div class='form-elem'>
  <label for='subscription-address2' class='form-label'>Suite, Apt.</label>
  {{input id='subscription-address2' name='address2' value=address2}}
</div>

<div class='form-elem'>
  <label for='subscription-city' class='form-label'>City</label>
  {{input id='subscription-city' name='city' value=city}}
</div>

<div class='form-elem'>
  <label for='subscription-zip-code' class='form-label'>Zip code</label>
  {{input id='subscription-zip-code' name='zipCode' value=zipCode}}
</div>

<div class='form-elem'>
  <label for='subscription-state' class='form-label'>State</label>
  {{input id='subscription-state' name='state' value=state}}
</div>

<div class='form-elem'>
  <label for='subscription-country' class='form-label'>Country</label>
  {{input id='subscription-country' name='country' value=country}}
</div>

<div class='form-elem'>
  <label for='subscription-vat-id' class='form-label optional'>VAT ID</label>
  {{input id='subscription-vat-id' name='vatId' value=vatId}}
</div>

